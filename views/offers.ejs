<%- include('partials/header.ejs') %>
    <section class="services">
        <div class="container">
            <div class="row">
                <% offres.forEach(offre=>{ %>
                    <form action="/api/vols/<%= offre.volId %>" method="POST">
                        <div class="col-md-4" style="margin-bottom: 5px;">
                            <div class="service-item first-service" style="text-align: left;">
                                <p>
                                    ville de départ: <%= offre.villDepart %>
                                </p>
                                <p>
                                    ville de d’arrivé: <%= offre.villeDarrive %>
                                </p>
                                <p>
                                    la date de départ: <%= offre.dateLheurDepart %>
                                </p>
                                <p>
                                    la date de Arrivé: <%= offre.dateLheurDarrive %>
                                </p>
                                <p>
                                    prix: <%= offre.prix %>
                                </p>
                                <p>
                                    le nombre de places.
                                </p>
                            </div>
                            <div class="form-group form-button">
                                <input type="submit" name="signin" id="signin" class="form-submit"
                                    value="chosen that offer" />
                            </div>
                        </div>
                    </form>
                    <% }) %>
            </div>
        </div>
    </section>
    <%- include('partials/footer.ejs') %>